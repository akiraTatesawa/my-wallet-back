{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "always"
            }
        ],
        "prettier/prettier": "error",
        "import/prefer-default-export": "off",
        "no-console": "off",
        "no-underscore-dangle": "off",
        "no-useless-escape": "off"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js"
                ]
            }
        }
    }
}